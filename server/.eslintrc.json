{
  "root": true,
  "env": { "es2021": true, "node": true },
  "extends": ["eslint:recommended", "prettier"],
  "ignorePatterns": ["node_modules", ".eslintrc.json", "dist"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "no-unused-vars": "off",
    "no-empty": "warn",
    "no-invalid-this": "error"
  }
}
